{
  "swagger": "2.0",
  "info": {
    "title": "ITrice API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/auth/signup": {
      "post": {
        "description": "User signup",
        "parameters": [
          {
            "name": "user data",
            "in": "body",
            "description": "JSON data for the api",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserData"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Successful signup"
          }
        }
      }
    },
    "/api/auth/login": {
      "post": {
        "description": "User login",
        "parameters": [
          {
            "name": "Login data",
            "in": "body",
            "description": "JSON data for the api",
            "required": true,
            "schema": {
              "$ref": "#/definitions/LoginData"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful login"
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "description": "User logout",
        "responses": {
          "200": {
            "description": "Successful logout"
          }
        }
      }
    },
    "/api/production": {
      "post": {
        "description": "Create Production",
        "parameters": [
          {
            "name": "ProductionData",
            "in": "body",
            "description": "JSON data for the api",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ProductionData"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created successfully"
          }
        }
      },
      "get": {
        "description": "Get production list",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Array of production objects"
          }
        }
      }
    },
    "/api/production/{productionId}": {
      "put": {
        "description": "Update a specific production",
        "parameters": [
          {
            "name": "productionId",
            "in": "path",
            "description": "Numeric Id of production to update",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "ProductionData",
            "in": "body",
            "description": "JSON data for the api",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ProductionData"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful production update"
          }
        }
      },
      "delete": {
        "description": "Delete a specific production",
        "parameters": [
          {
            "name": "productionId",
            "in": "path",
            "description": "Numeric Id of production to delete",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful production delete"
          }
        }
      }
    }
  },
  "definitions": {
    "UserData": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    },
    "LoginData": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "remember": {
          "type": "boolean"
        }
      }
    },
    "ProductionData": {
      "type": "object",
      "properties": {
        "irrigated": {
          "type": "number",
          "format": "float"
        },
        "rainfeed": {
          "type": "number",
          "format": "float"
        },
        "seedType": {
          "type": "string"
        },
        "date": {
          "type": "string",
          "format": "date"
        }
      }
    }
  }
}
