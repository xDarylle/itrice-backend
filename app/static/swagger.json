{
  "swagger": "2.0",
  "info": {
    "title": "ITrice API",
    "version": "1.0.0"
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "description": "User login",
        "parameters": [
          {
            "name": "Login data",
            "in": "body",
            "description": "JSON data for the api",
            "required": true,
            "schema": {
              "$ref": "#/definitions/LoginData"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful login"
          }
        }
      }
    },
    "/api/auth/logout": {
      "post": {
        "description": "User logout",
        "responses": {
          "200": {
            "description": "Successful logout"
          }
        }
      }
    },
    "/api/production": {
      "post": {
        "description": "Create Production",
        "parameters": [
          {
            "name": "ProductionData",
            "in": "body",
            "description": "JSON data for the api",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ProductionData"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created successfully"
          }
        }
      },
      "get": {
        "description": "Get production list",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns an array of production objects",
            "schema": {
              "$ref": "#/definitions/ProductionDataList"
            }
          }
        }
      }
    },
    "/api/production/{productionId}": {
      "put": {
        "description": "Update a specific production",
        "parameters": [
          {
            "name": "productionId",
            "in": "path",
            "description": "Numeric Id of production to update",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "ProductionData",
            "in": "body",
            "description": "JSON data for the api",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ProductionData"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful production update"
          }
        }
      },
      "delete": {
        "description": "Delete a specific production",
        "parameters": [
          {
            "name": "productionId",
            "in": "path",
            "description": "Numeric Id of production to delete",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful production delete"
          }
        }
      }
    },
    "/api/users": {
      "post": {
        "description": "Create a new user",
        "parameters": [
          {
            "name": "user data",
            "in": "body",
            "description": "JSON data for the api",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserData"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created successfully"
          }
        }
      },
      "get": {
        "description": "Get users list",
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number to query",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns an array of user objects",
            "schema": {
              "$ref": "#/definitions/UserDataList"
            }
          }
        }
      }
    },
    "/api/users/{userId}": {
      "put": {
        "description": "Update a specific users",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "Numeric Id of user to update",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "user data",
            "in": "body",
            "description": "JSON data for the api",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserData"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful user update"
          }
        }
      },
      "delete": {
        "description": "Delete a specific users",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "Numeric Id of user to update",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful user delete"
          }
        }
      }
    },
    "/api/dashboard/trend": {
      "get": {
        "description": "Get trend for that year",
        "parameters": [
          {
            "name": "year",
            "in": "query",
            "description": "Year to query",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful"
          }
        }
      }
    }
  },
  "definitions": {
    "UserData": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    },
    "LoginData": {
      "type": "object",
      "properties": {
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "remember": {
          "type": "boolean"
        }
      }
    },
    "ProductionData": {
      "type": "object",
      "properties": {
        "irrigated": {
          "type": "number",
          "format": "float"
        },
        "rainfeed": {
          "type": "number",
          "format": "float"
        },
        "seedType": {
          "type": "string"
        }
      }
    },
    "UserDataList": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "email": {
                "type": "string"
              },
              "role": {
                "type": "string"
              },
              "dateCreated": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        }
      }
    },
    "ProductionDataList": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "integer"
              },
              "irrigated": {
                "type": "number",
                "format": "float"
              },
              "rainfeed": {
                "type": "number",
                "format": "float"
              },
              "seedType": {
                "type": "string"
              },
              "dateCreated": {
                "type": "string",
                "format": "date-time"
              }
            }
          }
        }
      }
    }
  }
}
